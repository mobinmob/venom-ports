# description	: Gtk implementation of xdg-desktop-portal  
# homepage	: https://github.com/flatpak/xdg-desktop-portal-gtk
# depends	: xdg-desktop-portal gtk autoconf

name=xdg-desktop-portal-gtk
version=1.14.1
release=1
source="https://github.com/flatpak/xdg-desktop-portal-gtk/releases/download/$version/xdg-desktop-portal-gtk-$version.tar.xz"

build() {
	cd $name-$version
	./configure --prefix=/usr
	make
	DESTDIR=$PKG make install
}
