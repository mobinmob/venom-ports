# description	: Portable stage 1 services for 66
# homepage	: https://git.obarun.org/obmods/boot-66serv
# depends	: 66

name=boot-66serv
version=2.4.1
release=1
source="https://git.obarun.org/obmods/$name/-/archive/v$version/$name-v$version.tar.gz"

build() {
	cd $name-v$version
	./configure --prefix=/usr
	make
	make DESTDIR=$PKG install
	# Create symlinks for init and init utilities
	mkdir $PKG/sbin
	ln -s /etc/66/init $PKG/sbin/init
	for i in halt poweroff reboot; do ln -s /etc/66/$i $PKG/sbin/$i;
done
}
