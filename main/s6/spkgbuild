# description	: The s6 supervision suite.
# homepage	: https://skarnet.org/software/s6/
# depends	: skalibs execline

name=s6
version=2.11.3.2
release=1
source="https://github.com/skarnet/$name/archive/refs/tags/v$version.tar.gz"

build() {
	cd $name-$version
	./configure --prefix=/usr \
		--enable-shared \
		--enable-static\
		--enable-static-libc
	make
	make DESTDIR=$PKG install
}
