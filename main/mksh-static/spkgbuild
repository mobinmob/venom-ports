# description	: The MirBSD Korn Shell -static version
# homepage	: http://www.mirbsd.org/mksh.htm

name=mksh-static
version=R59c
release=1
source="http://www.mirbsd.org/MirOS/dist/mir/mksh/mksh-$version.tgz"

build() {
cd mksh

CPPFLAGS="$CPPFLAGS -DMKSH_BINSHPOSIX=1 -DMKSH_UNLIMITED=1 \
-DMKSH_ASSUME_UTF8=1 -DMKSH_DISABLE_DEPRECATED=1 \
-DMKSH_DISABLE_EXPERIMENTAL=1 -DMKSH_NOPROSPECTOFWORK=1 \
-DMKSH_SMALL_BUT_FAST=1 -DMKSH_S_NOVI=1 -DMKSH_UNEMPLOYED=1 \
-USE_REALLOC_MALLOC=0" LDFLAGS=" -static" sh Build.sh -r

install -D -m 0755 mksh $PKG/bin/$name
install -D -m 0644 mksh.1 $PKG/usr/share/man/man1/$name.1
}
